# BetSnipe.ai v2.0 Configuration
# Copy this file to .env and fill in your values

# ==========================================
# DATABASE (PostgreSQL/Supabase)
# ==========================================

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/betsnipe

# Supabase (optional - alternative to direct PostgreSQL)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your-anon-key

# ==========================================
# TELEGRAM NOTIFICATIONS
# ==========================================

# Bot token from @BotFather
TELEGRAM_BOT_TOKEN=your-bot-token

# Chat ID to send notifications to
TELEGRAM_CHAT_ID=your-chat-id

# ==========================================
# SCRAPER SETTINGS
# ==========================================

# Seconds between scrape cycles (default: 2)
SCRAPE_INTERVAL_SECONDS=2

# HTTP request timeout in seconds (default: 30)
REQUEST_TIMEOUT_SECONDS=30

# Max concurrent requests per bookmaker (default: 10)
MAX_CONCURRENT_REQUESTS=10

# ==========================================
# MATCH MATCHING SETTINGS
# ==========================================

# Time window for matching games in minutes (default: 120)
MATCH_TIME_WINDOW_MINUTES=120

# Minimum similarity score for auto-matching 0-100 (default: 75)
MATCH_SIMILARITY_THRESHOLD=75

# ==========================================
# ARBITRAGE SETTINGS
# ==========================================

# Minimum profit percentage to report (default: 1.0)
MIN_PROFIT_PERCENTAGE=1.0

# Hours to deduplicate arbitrage notifications (default: 24)
ARBITRAGE_DEDUP_HOURS=24

# ==========================================
# API SERVER SETTINGS
# ==========================================

# API host (default: 0.0.0.0)
API_HOST=0.0.0.0

# API port (default: 8000)
API_PORT=8000

# Enable auto-reload for development (default: false)
API_RELOAD=false

# CORS allowed origins (comma-separated, default: *)
CORS_ORIGINS=*

# ==========================================
# FEATURE FLAGS
# ==========================================

# Enable Telegram notifications (default: true)
ENABLE_TELEGRAM=true

# Enable WebSocket real-time updates (default: true)
ENABLE_WEBSOCKET=true

# Enable odds history recording (default: true)
ENABLE_ODDS_HISTORY=true

# ==========================================
# LOGGING
# ==========================================

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO
